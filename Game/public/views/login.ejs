<link href="assets/css/loginStyle.css" rel="stylesheet">
<div class="middlePage">

    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Please Sign In</h3>
        </div>
        <div class="panel-body">

            <div class="row">

                <div class="col-md-5">
                    <a href="#"><img src="http://techulus.com/buttons/fb.png" /></a>
                    <br/>
                    <a href="#"><img src="http://techulus.com/buttons/tw.png" /></a>
                    <br/>
                    <a href="#"><img src="http://techulus.com/buttons/gplus.png" /></a>
                </div>

                <div class="col-md-7" style="border-left:1px solid #ccc;height:160px">
                    <form role="form" name="loginForm" ng-submit="loginAuth()" class="form-horizontal">

                            <input id="textinput" ng-model="user.username" type="text" placeholder="Enter Username" class="form-control input-md" required>
                            <div class="spacing">
                                <input type="checkbox" name="checkboxes" id="checkboxes-0" value="1"><small> Remember me</small></div>
                            <input id="textinput" ng-model="user.password" type="password" placeholder="Enter Password" class="form-control input-md" required>
                            <div class="spacing"><a href="#"><small> Forgot Password?</small></a>
                                <br/>
                            </div>
                            <input type="submit" class="btn btn-info btn-sm pull-right" value="Sign In">
                            <small><a href="/signup">Sign up</a><small>

                    </form>
                </div>

            </div>
        </div>
    </div>

</div>