<link href="assets/css/signupStyle.css" rel="stylesheet">
<div class="middlePage">

    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Sign Up</h3>
        </div>
        <div class="panel-body">

            <div class="row">

                <div class="panel-body">
                    <form name="userForm" role="form" ng-submit="submitForm(userForm.$valid)" novalidate>
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12">
                                <div class="form-group">
                                    <input type="text" name="username" ng-model="user.username" class="form-control input-sm" placeholder="First Name" required>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="email" name="email" ng-model="user.email" class="form-control input-sm" placeholder="Email Address" required>
                        </div>

                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <input type="password" name="password" ng-model="user.password" ng-minlength="6" class="form-control input-sm" placeholder="Password" required>
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <input type="password" name="password_confirmation "class="form-control input-sm" ng-minlength="6" placeholder="Confirm Password" required>
                                </div>
                            </div>
                        </div>

                        <input type="submit" value="Register" class="btn btn-info btn-block">
                    </form>
                </div>

            </div>
        </div>
    </div>

</div>